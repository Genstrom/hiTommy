@model dynamic
@{
    ViewData["Title"] = "Product";
}

@section Styles{
    <link rel="stylesheet" href="@Url.Content("~/css/product-page.css")">
}


<main>
    <div class="product-container">
        <img class="product" src="@(Model.Shoe.PictureUrl)" />
        <div class="product-description">
            <br>
            <p>@Model.Shoe.Description</p>
        </div>
        <div class="product-info">
            <h2>@Model.Shoe.Name</h2>
            <h3>@($"{Model.Shoe.Price:c}")</h3>
        </div>
        <div class="dropdown-container">
            <label for="size" class="size-label">Size &nbsp;</label>
            <select name="Size" id="Size" class="product-select">
                @for (int i = 0; i < Model.Shoe.Sizes.Count; i++)
                {
                    <option value="size">@($"{Model.Shoe.Sizes[i].Size}")</option>

                }

            </select>
        </div>
        <div class="button-section">

            <form action="" method="post">
                <input type="number" name="shoeId" value="@Model.Shoe.Id" />
                <input type="number" name="Size" value="Size" />
                <input type="submit" input formaction="/Checkout" class="buy-button" name="Submit" value="Buy Now"></input>
            </form>

        </div>
    </div>
</main>