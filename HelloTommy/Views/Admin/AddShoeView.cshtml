@model dynamic
@{
    ViewData["Title"] = "Admin - Add Shoe";
}


<head>

    @section Styles{
        <link rel="stylesheet" href="@Url.Content("~/css/contact-page.css")" />
    }

</head>


<div class="form-container">
    <form id="contact"  method="POST">
        <h1>Add a new shoe</h1>
        <h4>Super secret admin site</h4>
        <fieldset>
            <label for="Name"></label>
            <input type="text" id="Name" placeholder="Shoe name goes brrr" name="name" />
        </fieldset>
        <fieldset>
            <label for="Price"></label>
            <input type="number" id="Price" placeholder="Price goes brrr" name="price" />
        </fieldset>
        <fieldset>
            <label for="BrandId"></label>
            <input type="number" min="1" id="BrandId" placeholder="BrandId goes brrr" name="brandId" />
        </fieldset>
        <fieldset>
            <label for="Picture"></label>
            <input type="text" id="Picture" placeholder="Picture link goes brrr" name="picture" />
        </fieldset>
        <fieldset>
            <label for="Description"></label>
            <textarea rows="5" cols="33" id="Description" placeholder="Description goes brrr" name="description"></textarea>
        </fieldset>
        <fieldset>
            <input type="submit" value="Send" name="submit" id="contact-submit" data-submit="...Sending">
        </fieldset>
    </form>
</div>