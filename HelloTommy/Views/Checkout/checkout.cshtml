@model dynamic
@{ ViewData["Title"] = "Checkout";
}

@section Styles{
    <link rel="stylesheet" href="@Url.Content("~/css/checkout.css")">
}

<div class="main-container">
    <h3>Checkout</h3>

    <section class="checkout-container">
        <div class="selectedProducts-container">
            <h5>Selected products</h5>
            <div class="product-container">
                <div id="" class="product-item">
                    <div>
                        <p class="product-name">@Model.Shoe.Name</p>
                    </div>
                    <div>
                        <p class="product-price">@Model.Shoe.Price</p>
                    </div>
                    <div>
                        <button id="" class="productDetails-btn">Details</button>
                    </div>
                </div>
                <div class="details-container hidden">
                    <div>
                        <p class="product-description">@Model.Shoe.Description</p>
                    </div>
                    <div>
                        <p class="product-size">Size: @Model.Size</p>
                    </div>
                    <div>
                        <p class="product-image"><img src="@Model.Shoe.PictureUrl"/></p>
                    </div>
                </div>
                <hr>
            </div>
            <a class="back" href="/"Home id="back">&#8592; Back to store</a>
        </div>

        <div class="payment-container">
            <div class="paymentMethod-container">
                <label for="payment-method">Payment Method</label>
                <select name="payment-method" id="payment-method">
                    <option value="">Invoice</option>
                </select>
            </div>
            <div class="billingInformation-container">
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" name="firstName" required>
                <label for="lastName">Last Name</label>
                <input type="text" id="lastName" name="lastName" required>

                <label for="billing">Billing Address</label>
                <input type="text" id="billing" name="billing" required>
                <label for="city">City</label>
                <input type="text" id="city" name="city" required>


                <label for="postal">Postal Code</label>
                <input type="number" id="postal" name="postal" required>
                <!-- Dropdown -->
                <label for="phone">Email</label>
                <input type="text" id="email" name="email" required>
                <label for="phone">Phone Number</label>
                <input type="number" id="phone" name="phone" required>
            </div>

            <div class="totalPayment-container">
                <div class="totalSum">
                    <h5>Total sum</h5>
                    <h5 id="sum">@Model.Shoe.Price</h5>
                </div>
                <button><a class="checkout-btn" href="/OrderConfirmed">Checkout</a></button>
            </div>
        </div>
    </section>
</div>

@section Scripts{
    <script src="@Url.Content("~/js/checkout.js")"></script>
}